<Window x:Class="SportIsLife.ListSportClubs"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SportIsLife"
        mc:Ignorable="d"
        Title="ListSportClubs" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <ListBox x:Name="lsMens" HorizontalAlignment="Left" Height="354" VerticalAlignment="Top" Width="454" Margin="10,55,0,0"  SelectionChanged="lsMens_SelectionChanged" MouseDoubleClick="lsMens_MouseDoubleClick"/>
        <Button x:Name="btnDelete" Content="Удалить выбранного спортсмена" HorizontalAlignment="Left" VerticalAlignment="Top" Width="207" Margin="575,55,0,0" Height="37" Click="btnDelete_Click"/>
    </Grid>
</Window>
